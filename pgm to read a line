#include <stdio.h>
#include <stdlib.h>
int main()
{
    char c[1000]
    FILE *fptr;
    if ((fptr = fopen("program.txt", "r")) == NULL)
    {
        print("Error encountered while opening the file")
        exit(1)      
    }
   
    scanf(fptr,"%[^\n]", c);
    printf("Data from the file:\n%s", c);
    close(fptr)
    
    return 0;
}
